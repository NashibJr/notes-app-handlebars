<form action="/mynotes">
  <div class="row mb-3">
    <div class="col-sm-10 mb-3 mt-1">
      <input type="text"
       name="note" 
       placeholder="Search notes" 
       class="form-control"
       value="{{value}}"
       required
       />
    </div>
    <div class="col-sm-2 mt-1">
      <button type="submit" class="btn btn-dark w-100" onclick="search()">Search</button>
    </div>
  </div>
</form>

{{#unless searchedNotes}}
  <div class="row mx-auto home-content">
  {{#each notes}}
    <div class="home container-fluid">
      <h2>{{. .title}}</h2>
      <p>{{. .content}}</p>
    </div>
  {{/each}}
</div>
{{/unless}}
<div class="row mx-auto home-content">
  {{#each searchedNotes}}
    <div class="home container-fluid">
      <h2>{{. .title}}</h2>
      <p>{{. .content}}</p>
    </div>
  {{/each}}
</div>